@{
	ViewData["title"] = "Bem-vindo à área do gestor!";
}

<!--Introdução da área do gestor-->
<div class="Intro mt-5">
	<div class="container text-center">
        <h1 class="display-4">@ViewData["title"]</h1>
        <p>TechStars Academy é um projeto acadêmico desenvolvido em ASP.NETCore MVC. Este site escolar oferece uma plataforma abrangente para a gestão de alunos, lançamento de notas, publicação de desempenho, cadastro de gestores, divulgação de carreiras disponíveis na instituição e uma página de novidades.</p>
    </div>
</div>

<!--Painel de menus para acesso as outras restrita do site-->
<div class="container" style="background-color: #F8F9FA; border-radius: 5px; box-shadow: 1px 1px 5px #B8D8CD">
    <div class="mt-5">
        <div class="row">
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Aluno" asp-action="Cadastro" id="SobreIcone">
                        <div class="incone">
                            <i class="bi bi-person-vcard"></i>
                        </div>
                        <div class="texto">
                            Cadastro do aluno
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Gestor" asp-action="Cadastro">
                        <div class="incone">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <div class="texto">
                            Cadastro de Gestores
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a href="#">
                        <div class="incone">
                            <i class="bi bi-person-arms-up"></i>
                        </div>
                        <div class="texto">
                            Divulgação de Carreiras
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!--Menu parte 2-->
    <div class="mt-5">
        <div class="row">
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Login" asp-action="Entrar">
                        <div class="incone">
                            <i class="bi bi-substack"></i>
                        </div>
                        <div class="texto">
                            Blog
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Home" asp-action="Sobre" id="SobreIcone">
                        <div class="incone">
                            <i class="bi bi-person-lines-fill"></i>
                        </div>
                        <div class="texto">
                            Lista de alunos
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-4">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Gestor" asp-action="Colaboradores">
                        <div class="incone">
                            <i class="bi bi-person-lines-fill"></i>
                        </div>
                        <div class="texto">
                            Lista de colaboradores
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--Menu parte 3-->
    <div class="mt-5">
        <div class="row">
            <div class="col-4 mb-5">
                <div class="linkDireto d-flex justify-content-center text-center">
                    <a asp-controller="Login" asp-action="Sair">
                        <div class="incone">
                            <i class="bi bi-box-arrow-right"></i>
                        </div>
                        <div class="texto">
                            Sair do sistema
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>