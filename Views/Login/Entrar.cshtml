@model TechStars_Academy.Models.AcessoPortal

@{
	Layout = null;
	ViewData["title"] = "Acesso ao portal do gestor";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TechStars Academy</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true">
	<link rel="icon" href="/programacao.ico" type="image/x-icon" />
</head>
<body>
	
	<div class="login row m-0 p-0 align-items-center">
		<div class="col-6">
			<img src="~/img/computer-login-animate.svg" class="img-fluid"/>
		</div>
		<div class="col-6">
			<h1 class="display-4">@ViewData["title"]</h1>
			<div class="col-md-5">
				@using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
				{
					@Html.LabelFor(Model => Model.Email, new { @class = "form-label" })
					@Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @MaxLength = "100" })
					@Html.LabelFor(Model => Model.Senha, new { @class = "form-label" })
					@Html.TextBoxFor(Model => Model.Senha, new { @class = "form-control", @MaxLength = "20" })

					<div class="mt-3 mb-3">
						@{
							if (TempData["FalhaLogin"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@TempData["FalhaLogin"]
								</div>
							}
						}
					</div>

					<div class="mt-3">
						<button type="submit" class="btn btn-primary">Entrar <i class="bi bi-diagram-2"></i></button>
						<a asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancelar <i class="bi bi-x-circle"></i></a>
						<a asp-controller="Home" asp-action="Index" class="btn btn-info">Voltar ao site <i class="bi bi-globe2"></i></a>
					</div>
				}
			</div>
		</div>
	</div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


